<% @page_title = @user ? @user.name + "さんのブログ" : "Shocyu のブログ" %>
<h1><%= @page_title %></h1>

<% if current_user %>
<p><%= link_to "Post new article", :new_micropost %></p>
<% end %>

<% if @microposts.present? %>
  <% @microposts.each do |micropost| %>
    <h2><%= micropost.title %></h2>
    <p><%= truncate(micropost.content, length: 80) %>
      <%= link_to "もっと読む", micropost %></p>
    <%= render "footer", micropost: micropost %>
  <% end %>
  
  <%= will_paginate @entries %>
<% else %>
  <p>記事がありません。</p>
<% end %>
